rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Module 1: Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Module 2: Children Profiles
    match /children/{childId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.parentId == request.auth.uid) && (request.resource == null || request.resource.data.parentId == request.auth.uid);
    }

    // Module 3: Posts
    match /posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }

    // Module 4: Reviews & Likes
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    match /likes/{likeId} {
      allow read: if true;
      allow write: if isAuthenticated() && (request.resource.data.userId == request.auth.uid);
    }

    // Module 5: Places
    match /places/{placeId} {
      allow read: if true;
      allow write: if false; // Only manageable via Admin SDK or Cloud Functions if automated
    }

    // Module 6: Community Groups
    match /groups/{groupId} {
      allow read: if true;
      allow write: if isAuthenticated(); // For now, allowing creation
    }
    
    match /groupMembers/{memberId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid in memberId.split('_'));
    }
    
    match /groupPosts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Module 7: Saved Places
    match /savedPlaces/{savedId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
  }
}
